    <rule comment="REGLA: SN (si es GD y no se tiene más información, se asignará masculino">
      <pattern>
	<pattern-item n="SN"/>
      </pattern>
     <action>
	<out>
	  <chunk>
	    <clip pos="1" part="whole"/>
	  </chunk>
	</out>
      </action>
</rule>

   
    <rule comment="REGLA: reset variables">
      <pattern>
