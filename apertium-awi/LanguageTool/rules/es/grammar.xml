    <!--http://roble.pntic.mec.es/acid0002/index_archivos/Gramatica/imperativo.htm
cantad [cantar/VMM02P0]
cantéis[cantar/VMSP2P0]

ven   [venir/VMM02S0
vengas[venir/VMSP2S0]-->

    <rule id="NO_IMPERATIVO" name="no + imperativo">
      <pattern>
