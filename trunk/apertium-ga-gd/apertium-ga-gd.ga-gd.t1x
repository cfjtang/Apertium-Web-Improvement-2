<?xml version="1.0" encoding="utf-8"?>
<transfer default="chunk">

  <section-def-cats>
    <def-cat n="nom">
      <cat-item tags="n.*"/>
      <cat-item tags="np.*"/>
    </def-cat>
    <def-cat n="adj">
      <cat-item tags="adj"/>
      <cat-item tags="adj.*"/>
    </def-cat>
    <def-cat n="verb">
      <cat-item tags="vblex.*"/>
    </def-cat>
  </section-def-cats>

  <section-def-attrs>
    <def-attr n="a_nom">
      <attr-item tags="n"/>
      <attr-item tags="np.top"/>
    </def-attr>
    <def-attr n="a_num">
      <attr-item tags="num"/>
    </def-attr>
    <def-attr n="a_adj">
      <attr-item tags="adj"/>
    </def-attr>
    <def-attr n="a_verb">
      <attr-item tags="vblex"/>
    </def-attr>
    <def-attr n="a_det">
      <attr-item tags="det.def"/>
      <attr-item tags="det.dem"/>
      <attr-item tags="det.pos"/>
    </def-attr>


    <def-attr n="gen">
      <attr-item tags="m"/>
      <attr-item tags="f"/>
      <attr-item tags="mf"/>
    </def-attr>
    <def-attr n="nbr">
      <attr-item tags="sp"/>
      <attr-item tags="sg"/>
      <attr-item tags="pl"/>
    </def-attr>
    <def-attr n="cas">
      <attr-item tags="nom"/>
      <attr-item tags="dat"/>
      <attr-item tags="gen"/>
    </def-attr>
    <def-attr n="pers">
      <attr-item tags="p1"/>
      <attr-item tags="p2"/>
      <attr-item tags="p3"/>
    </def-attr>
    <def-attr n="temps">
      <attr-item tags="pres"/>
      <attr-item tags="fti"/>
      <attr-item tags="past"/>
      <attr-item tags="pp"/>
      <attr-item tags="ger"/>
      <attr-item tags="imp"/>
    </def-attr>
  </section-def-attrs>

  <section-def-vars>
    <def-var n="case"/>
    <def-var n="number"/>
    <def-var n="genere"/>
  </section-def-vars>

  <section-def-macros>

    <def-macro n="setvars" npar="1"> <!-- Replace this with a proper concordance macro -->
      <let>
        <var n="genere"/>
        <clip pos="1" side="tl" part="gen"/>
      </let>
      <let>
        <var n="number"/>
        <clip pos="1" side="tl" part="nbr"/>
      </let>
      <let>
        <var n="case"/>
        <clip pos="1" side="tl" part="cas"/>
      </let>
    </def-macro>
  </section-def-macros>

  <section-rules>

    <rule>
      <pattern>
        <pattern-item n="nom"/>
      </pattern>
      <action>
        <call-macro n="setvars">
          <with-param pos="1"/>
        </call-macro>
        <out>
          <chunk name="nom">
            <tags>
              <tag><lit-tag v="SN"/></tag>
              <tag><var n="genere"/></tag>
              <tag><var n="number"/></tag>
              <tag><var n="case"/></tag>
            </tags>
            <lu>
              <clip pos="1" side="tl" part="lem"/>
              <clip pos="1" side="tl" part="a_nom"/>
              <clip pos="1" side="tl" part="gen"/>
              <clip pos="1" side="tl" part="nbr"/>
              <clip pos="1" side="tl" part="cas"/>
            </lu>
          </chunk>
        </out>
      </action>
    </rule>

    <rule>
      <pattern>
        <pattern-item n="verb"/>
      </pattern>
      <action>
        <choose> 
          <when>   <!-- When verb is in the present tense -->
            <test>
              <equal>
                <clip pos="1" side="sl" part="temps"/>
                <lit-tag v="pres"/>
              </equal>
            </test>
            <out>
              <chunk name="verbcj">
                <tags>
                  <tag><lit-tag v="SV"/></tag>
                </tags>
                <lu>
                  <lit v="bi"/>
                  <lit-tag v="vblex"/>
                  <lit-tag v="pres"/>
                </lu>
                <b/>
                <lu>
                  <lit v="ag"/>
                  <lit-tag v="pr"/>
                </lu>
  	      <b/>
                <lu>
                  <clip pos="1" side="tl" part="lem"/>
                  <clip pos="1" side="tl" part="a_verb"/>
                  <lit-tag v="ger"/>
                  <lit-tag v="m"/>
                  <clip pos="1" side="tl" part="nbr"/>
                  <lit-tag v="nom"/>
                </lu>
              </chunk>
            </out>
          </when>
          <otherwise> <!-- Just output as is -->
	    <out>
              <chunk name="verbcj">
                <tags>
                  <tag><lit-tag v="SV"/></tag>
                </tags>
	        <lu>
                  <clip pos="1" side="tl" part="whole"/>
	        </lu>
              </chunk>
	    </out>
          </otherwise>
        </choose>
      </action>
    </rule>

  </section-rules>
</transfer>
